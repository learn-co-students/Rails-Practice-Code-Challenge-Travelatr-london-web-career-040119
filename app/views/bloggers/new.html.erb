<h1 class="text-center">Blogger</h1>

<div class="container w-50">

<%= form_for(@blogger) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name:' %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio, 'Bio:' %><br>
    <%= f.text_field :bio, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :age, 'Age:' %><br>
    <%= f.text_field :age, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "form-control btn btn-primary"%>
  </div>
<% end %>

</div>