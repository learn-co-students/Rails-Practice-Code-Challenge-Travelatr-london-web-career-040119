<h1>Blogger</h1>

<%= form_for(@blogger) do |f| %>
  <div class="field">
    <%= f.label :name, 'Name:' %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :bio, 'Bio:' %><br>
    <%= f.text_field :bio %>
  </div>

  <div class="field">
    <%= f.label :age, 'Age:' %><br>
    <%= f.text_field :age %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
