
<div class="container w-50">
<%= form_for post do |f| %>

  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Content" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :blogger, "Blogger" %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name, { prompt: true }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label :destination, "Destination" %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name, { prompt: true }, { class: "form-control" } %>
  </div>



  <%= f.submit class: "form-control btn btn-primary" %>

<% end %>
</div>